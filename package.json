{
  "name": "bpsr-meter",
  "version": "1.0.0",
  "description": "BPSR Meter",
  "type": "module",
  "main": "dist/electron-main.js",
  "bin": {
    "bpsr-meter": "dist/server.js"
  },
  "engines": {
    "node": "^22.15.0"
  },
  "scripts": {
    "build": "tsc && pkg .",
    "build:ts": "tsc && node build-copy-assets.js",
    "build:renderer": "vite build",
    "build:all": "npm run build:ts && npm run build:renderer && npm run copy-assets",
    "copy-assets": "node build-copy-assets.js",
    "watch": "tsc --watch",
    "watch:assets": "node dev-watch.js",
    "watch:renderer": "vite build --watch",
    "start": "npm run build:ts && electron .",
    "start:dev": "electron .",
    "dev": "electron-reload .",
    "lint:pritter": "prettier --write .",
    "test": "echo \"Error: no test specified\" && exit 1",
    "dist": "npm run build:all && electron-builder --win --x64"
  },
  "keywords": [],
  "license": "AGPL-3.0",
  "dependencies": {
    "cap": "^0.2.1",
    "cors": "^2.8.5",
    "express": "^5.1.0",
    "google-protobuf": "^4.0.0",
    "long": "^5.3.2",
    "protobufjs": "^7.5.4",
    "socket.io": "^4.8.1",
    "winston": "^3.17.0"
  },
  "devDependencies": {
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.3",
    "@types/google-protobuf": "^3.15.12",
    "@types/long": "^5.0.0",
    "@types/node": "^22.18.11",
    "@yao-pkg/pkg": "^6.6.0",
    "chokidar": "^4.0.1",
    "concurrently": "^9.1.2",
    "electron": "^38.0.0",
    "electron-builder": "^26.0.12",
    "electron-reload": "^2.0.0-alpha.1",
    "electron-reloader": "^1.2.3",
    "prettier": "^3.6.2",
    "protobufjs-cli": "^1.1.3",
    "typescript": "^5.9.3",
    "vite": "^6.4.0"
  },
  "pkg": {
    "scripts": "server.js",
    "assets": [
      "public/**/*",
      "tables/**/*",
      "diccionario.json",
      "ip.txt",
      "player_map.json",
      "settings.json",
      "users.json",
      "node_modules/cap/**/*"
    ],
    "targets": [
      "node22-win-x64"
    ],
    "outputPath": "dist"
  },
  "build": {
    "appId": "com.bpsr.meter",
    "productName": "BPSR Meter",
    "files": [
      "dist/**/*",
      "src/**/*",
      "algo/**/*",
      "public/**/*",
      "tables/**/*",
      "diccionario.json",
      "player_map.json",
      "settings.json",
      "users.json",
      "icon.ico",
      "icon.png",
      "medidor.png",
      "portada.png"
    ],
    "extraResources": [
      {
        "from": "node_modules/cap/",
        "to": "cap/",
        "filter": [
          "**/*"
        ]
      }
    ],
    "win": {
      "icon": "icon.ico",
      "target": [
        "nsis"
      ]
    },
    "nsis": {
      "include": "extra.nsh",
      "deleteAppDataOnUninstall": true
    },
    "directories": {
      "output": "dist_electron"
    }
  }
}
