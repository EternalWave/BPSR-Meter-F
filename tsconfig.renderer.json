{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "strict": false,
    "noEmit": true,
    "jsx": "preserve"
  },
  "include": [
    "src/renderer/**/*.ts",
    "src/renderer/**/*.d.ts"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}
